<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center" id="card-signup">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Registro</h3>
                    </div>

                    <form action="/signup" method="post">
                        <div class="form-group">
                            <input type="text" name="document" placeholder="Ingrese su documento" class="form-control" autofocus>
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" name="fullname" placeholder="Ingrese su nombre completo" class="form-control">
                        </div>
                        <br>
                        <div class="form-group">
                            <button class="btn btn-success" style="width: 50%;" >
                                Registrarse
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>